<% if @current_user.present? && @current_user.admin? %>
  <h1>Orders index</h1>
  <table>
    <thead>
      <th>Order Number</th>
      <th>Customer Name</th>
      <th>Date</th>
    </thead>
    <% @orders.each do |o| %>
    <tr>
      <td>
        <%= o.id %>
      </td>
      <td>
        <%= link_to o.user.name, order_path(o) %>
      </td>
      <td>
        <%= o.created_at.localtime.strftime('%d/%m/%Y %-l:%M %p') %>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>
