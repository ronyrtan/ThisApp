<div class="signInUpContainer">
  <h2 class='signInFormTitle'>Sign in to This.</h2>

  <% if flash[:message].present? %>
    <p><%= flash[:message] %></p>
  <% end %>

  <%= form_tag login_path do %>
  <p>
    <%= email_field_tag :email, nil, :placeholder => 'Email', :class => "signInUpForm" %>
  </p>

  <p>
    <%= password_field_tag :password, nil, :placeholder => 'Password', :class => "signInUpForm" %>
  </p>

  <%= submit_tag 'Log in', :class => 'signInUpFormButton' %>

  <% end %>
</div>
