<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'signUpForm', :placeholder => 'name' %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => 'signUpForm', :placeholder => 'email' %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :class => 'signUpForm', :placeholder => 'password' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, :class => 'signUpForm', :placeholder => 'password confirmation' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'signUpFormButton' %>
  </div>
<% end %>
